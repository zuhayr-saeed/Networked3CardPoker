<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/8" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="resultController"
      alignment="CENTER" spacing="30">
    <padding>
        <Insets top="100" right="50" bottom="100" left="50"/>
    </padding>

    <Label fx:id="resultLabel" text="Result" styleClass="section-title"/>
    <Label fx:id="winningsLabel" text="0" styleClass="client-count"/>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="playAgainButton" text="Play Another Hand" onAction="#handlePlayAgain" styleClass="button"/>
        <Button fx:id="exitButton" text="Exit" onAction="#handleExit" styleClass="button"/>
    </HBox>
</VBox>
